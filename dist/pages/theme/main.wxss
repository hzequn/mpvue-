
#theme {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
}
#theme .theme-cover {
  position: relative;
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}
#theme .theme-cover .theme-image {
  display: block;
  width: 100%;
  background-color: #5b7492;
  filter: contrast(50%);
}
#theme .theme-cover .theme-title {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 0;
  bottom: 30rpx;
  z-index: 20;
  width: 67%;
  color: #fff;
  text-align: right;
  text-shadow: 0 0 10rpx rgba(0,0,0,0.5);
  padding-right: 32rpx;
}
#theme .theme-cover .theme-title .title-name {
  align-self: flex-end;
  width: fit-content;
  font-size: 34rpx;
  padding-bottom: 12rpx;
  margin-bottom: 12rpx;
  border-bottom: 8rpx solid #0084ff;
}
#theme .theme-cover .theme-title .title-description {
  font-size: 32rpx;
}
#theme .theme-list {
  box-sizing: border-box;
  position: relative;
}