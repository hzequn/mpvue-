
#detail {
  position: relative;
  width: 100%;
  padding-bottom: 104rpx;
  background: #fff;
}
#detail .detail-container {
  position: relative;
  width: 100%;
  padding-bottom: 104rpx;
}
#detail .detail-container .detail-cover {
  position: relative;
  width: 100%;
  height: 440rpx;
  overflow: hidden;
}
#detail .detail-container .detail-cover .detail-image {
  display: block;
  width: 100%;
}
#detail .detail-container .detail-cover .detail-title {
  box-sizing: border-box;
  position: absolute;
  left: 0;
  bottom: 30rpx;
  z-index: 20;
  width: 100%;
  color: #fff;
  font-size: 34rpx;
  text-shadow: 0 0 10rpx rgba(0,0,0,0.5);
  user-select: all;
  padding: 0 32rpx;
}
#detail .detail-container .detail-cover .cover-mask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  background-color: rgba(91,116,146,0.5);
}
#detail .detail-container .detail-cover .cover-mask-black {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 11;
  width: 100%;
  height: 25%;
  background-image: linear-gradient(0deg, transparent, rgba(0,0,0,0.5) 95%);
}
#detail .detail-container .detail-content {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  word-wrap: break-word;
  padding: 32rpx;
}
#detail .detail-container .detail-content .link-text {
  color: #476b95;
  user-select: all;
}
#detail .detail-container .detail-content .headline-background,
#detail .detail-container .detail-content .view-more {
  display: none;
}
#detail .detail-container .detail-content .headline-title {
  color: $titleColor;
  font-size: 40rpx;
  user-select: all;
}
#detail .detail-container .detail-content .question-title {
  color: $titleColor;
  font-size: 40rpx;
  user-select: all;
}
#detail .detail-container .detail-content .meta {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  margin: 16rpx 0;
}
#detail .detail-container .detail-content .meta .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 100%;
  margin-right: 16rpx;
}
#detail .detail-container .detail-content .meta .author {
  color: #0084ff;
  white-space: nowrap;
}
#detail .detail-container .detail-content .meta .bio {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #888;
}
#detail .detail-container .detail-content .content {
  width: 100%;
  color: #353535;
  font-size: 36rpx;
  text-align: justify;
  line-height: 64rpx;
}
#detail .detail-container .detail-content .content .content-image {
  display: block;
  width: 100%;
  height: auto;
  margin-top: 16rpx;
}
#detail .detail-container .detail-content .content .info-text {
  display: block;
  width: 100%;
  color: #888;
  font-size: 32rpx;
  margin: 16rpx 0;
  line-height: initial;
}
#detail .detail-container .detail-tool {
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  width: 100%;
  height: 104rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 500;
  padding: 20rpx 32rpx;
  border-top: 2rpx solid #f4f4f4;
  background: #fff;
  overflow-x: auto;
}
#detail .detail-container .detail-tool .tool-item {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: fit-content;
  color: #8590a6;
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
  line-height: 1;
  padding: 16rpx 20rpx;
  margin-right: 12rpx;
  border-radius: 6rpx;
}
#detail .detail-container .detail-tool .tool-item.popularity {
  color: #0084ff;
  background-color: rgba(0,132,255,0.1);
}
#detail .detail-container .detail-tool .tool-item.share {
  border: none;
  background: transparent;
  margin-left: 0;
}
#detail .detail-container .detail-tool .tool-item.share:after {
  border: none;
}
#detail .detail-container .detail-tool .tool-item:last-child {
  margin-right: 32rpx;
}
#detail .detail-container .detail-tool .tool-item .item-icon {
  margin-right: 10rpx;
}